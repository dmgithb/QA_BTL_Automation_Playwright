{
  "name": "btlplaywright-automation-framework",
  "version": "1.0.0",
  "description": "Comprehensive Playwright automation framework for Bulktainer ERP System with POM, data-driven testing, and advanced reporting",
  "main": "index.js",
  "scripts": {
    "test": "playwright test --project=critical",
    "test:all": "playwright test --project=chromium",
    "test:critical": "playwright test --project=critical",
    "test:smoke": "playwright test --project=smoke",
    "test:regression": "playwright test --project=regression",
    "test:extended": "playwright test --grep=\"@extended\"",
    "test:all-browsers": "playwright test",
    "test:headed": "playwright test --headed --project=critical",
    "test:debug": "playwright test --debug --project=critical",
    "test:ui": "playwright test --ui --project=critical",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:login": "playwright test tests/login.spec.ts",
    "test:setup": "playwright test tests/setup.setup.ts",
    "test:user-management": "playwright test tests/user-management.spec.ts --project=critical",
    "test:factory-validation": "playwright test tests/test-data-factory-validation.spec.ts",
    "test:email-validation": "playwright test tests/email-domain-validation.spec.ts",
    "test:config-validation": "node scripts/validate-env.js",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",
    "codegen": "playwright codegen",
    "codegen:login": "playwright codegen https://training.bt-ms.com/MAIN-STAGE/erp.php/login",
    "show-report": "playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "clean": "rimraf allure-results allure-report reports test-results",
    "clean:reports": "rimraf reports/screenshots reports/videos reports/logs",
    "install:browsers": "playwright install",
    "install:deps": "playwright install-deps",
    "lint": "tsc --noEmit",
    "format": "prettier --write .",
    "test:ci": "playwright test --reporter=html,json,junit",
    "docker:build": "docker build -t btl-playwright .",
    "docker:run": "docker run --rm -v ${PWD}/reports:/app/reports btl-playwright",
    "docker:compose:up": "docker-compose up --build",
    "docker:compose:down": "docker-compose down",
    "docker:test": "docker-compose run --rm playwright-tests npm test",
    "serve:reports": "http-server reports -p 8080 -o"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "typescript",
    "page-object-model",
    "data-driven",
    "reporting",
    "bulktainer",
    "erp"
  ],
  "author": "Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.3",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.1",
    "typescript": "^5.9.2",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
