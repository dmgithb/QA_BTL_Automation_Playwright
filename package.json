{
  "name": "qa-playwright-automation-framework",
  "version": "1.0.0",
  "description": "Comprehensive Playwright automation framework with POM, data-driven testing, and advanced reporting",
  "main": "index.js",
  "scripts": {
    "test": "playwright test --project=critical",
    "test:all": "playwright test --project=chromium",
    "test:critical": "playwright test --project=critical",
    "test:smoke": "playwright test --project=smoke",
    "test:regression": "playwright test --project=regression",
    "test:extended": "playwright test --grep=\"@extended\"",
    "test:headed": "playwright test --headed --project=critical",
    "test:debug": "playwright test --debug --project=critical",
    "test:ui": "playwright test --ui --project=critical",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:critical-firefox": "playwright test --project=critical-firefox",
    "test:critical-webkit": "playwright test --project=critical-webkit",
    "test:all-browsers": "playwright test --project=firefox --project=webkit --project=chromium",
    "test:login": "playwright test tests/login.spec.ts",
    "test:setup": "playwright test tests/setup.setup.ts",
    "test:user-management": "playwright test tests/user-management.spec.ts --project=critical",
    "test:factory-validation": "playwright test tests/test-data-factory-validation.spec.ts",
    "test:email-validation": "playwright test tests/email-domain-validation.spec.ts",
    "test:config-validation": "node scripts/validate-env.js",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",
    "bdd": "cucumber-js",
    "bdd:smoke": "cucumber-js --profile smoke",
    "bdd:critical": "cucumber-js --profile critical",
    "bdd:regression": "cucumber-js --profile regression",
    "bdd:comprehensive": "cucumber-js --profile comprehensive",
    "bdd:data-driven": "cucumber-js --profile data-driven",
    "bdd:performance": "cucumber-js --profile performance",
    "bdd:security": "cucumber-js --profile security",
    "bdd:login": "cucumber-js features/login.feature",
    "bdd:login-main": "cucumber-js --profile login-main",
    "bdd:login-data-driven": "cucumber-js --profile login-data-driven",
    "bdd:login-performance": "cucumber-js --profile login-performance",
    "bdd:login-comprehensive": "cucumber-js features/login-comprehensive.feature",
    "bdd:login-all-reports": "npm run bdd:login-clear && npm run bdd:login-execute && npm run bdd:reports-generate",
    "bdd:login-clear": "rimraf allure-results && rimraf reports/bdd-report.html && rimraf reports/bdd-results.json && mkdirp allure-results",
    "bdd:login-execute": "cross-env ALLURE_RESULTS_DIR=allure-results cucumber-js features/login-main.feature --require-module ts-node/register --require features/step-definitions/login-main.steps.ts --require features/support/**/*.ts --format progress --format json:reports/bdd-results.json --format html:reports/bdd-report.html --format allure-cucumberjs/reporter",
    "bdd:reports-generate": "npm run bdd:allure-generate && npm run bdd:reports-summary",
    "bdd:allure-generate": "allure generate allure-results --clean -o reports/bdd-allure-report",
    "bdd:reports-summary": "echo 'Reports generated: reports/bdd-report.html, reports/bdd-allure-report/index.html, reports/bdd-results.json'",
    "bdd:user-management": "cucumber-js features/user-management.feature",
    "bdd:headed": "cucumber-js --profile default",
    "bdd:report": "node scripts/generate-cucumber-report.js",
    "codegen": "playwright codegen",
    "codegen:login": "playwright codegen https://your-app-url.com/login",
    "show-report": "playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:fresh": "rimraf allure-results && playwright test --reporter=allure-playwright && allure serve allure-results",
    "test:fresh-report": "rimraf allure-results && playwright test --reporter=allure-playwright",
    "clean": "rimraf allure-results allure-report reports test-results",
    "clean:reports": "rimraf reports/screenshots reports/videos reports/logs",
    "install:browsers": "playwright install",
    "install:deps": "playwright install-deps",
    "lint": "tsc --noEmit",
    "format": "prettier --write .",
    "test:ci": "playwright test --reporter=html,json,junit",
    "docker:build": "docker build -t qa-playwright .",
    "docker:run": "docker run --rm -v ${PWD}/reports:/app/reports qa-playwright",
    "docker:compose:up": "docker-compose up --build",
    "docker:compose:down": "docker-compose down",
    "docker:test": "docker-compose run --rm playwright-tests npm test",
    "serve:reports": "http-server reports -p 8080 -o"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "typescript",
    "page-object-model",
    "data-driven",
    "reporting",
    "e2e-testing",
    "qa"
  ],
  "author": "Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^12.1.0",
    "@cucumber/pretty-formatter": "^2.0.1",
    "@playwright/test": "^1.54.2",
    "@types/cucumber": "^6.0.1",
    "@types/node": "^24.2.0",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.3.3",
    "allure-playwright": "^3.3.3",
    "cross-env": "^10.0.0",
    "csv-parser": "^3.2.0",
    "cucumber-html-reporter": "^7.2.0",
    "dotenv": "^17.2.1",
    "mkdirp": "^3.0.1",
    "playwright-bdd": "^8.3.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
