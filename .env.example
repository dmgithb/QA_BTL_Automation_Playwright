# Environment Configuration
NODE_ENV=test

# Application URLs
BASE_URL=https://your-app-url.com
API_BASE_URL=https://your-api-url.com/api/v1

# Test Configuration
DEFAULT_TIMEOUT=30000
RETRY_COUNT=2
HEADLESS=false

# Browser Configuration
BROWSER=chromium
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Reporting Configuration
SCREENSHOT_MODE=only-on-failure
VIDEO_MODE=retain-on-failure
ALLURE_RESULTS_DIR=allure-results
ALLURE_REPORT_DIR=allure-report

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true

# Database Configuration (if needed)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=test_db
# DB_USER=test_user
# DB_PASSWORD=test_password

# Test Data Configuration
TEST_DATA_DIR=data
ENABLE_DATA_DRIVEN_TESTS=true

# Authentication Credentials (Secure)
# IMPORTANT: Replace these with actual values in your local .env file
# Do not commit actual values to version control
TEST_USER_USERNAME=your_test_username
TEST_USER_PASSWORD=your_test_password
TEST_USER_ROLE=administrator

# Alternative user credentials (if needed)
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_admin_password
MANAGER_USERNAME=your_manager_username
MANAGER_PASSWORD=your_manager_password
REGULAR_USER_USERNAME=your_regular_username
REGULAR_USER_PASSWORD=your_regular_password

# Email Configuration
DEFAULT_EMAIL_DOMAIN=@digitalmesh.com

# Security Configuration
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=3
