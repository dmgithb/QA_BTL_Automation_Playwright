# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real credentials to version control

# Environment Configuration
NODE_ENV=test

# Application URLs
BASE_URL=https://training.bt-ms.com/MAIN-STAGE/erp.php
API_BASE_URL=https://training.bt-ms.com/api/v1

# Test Configuration
DEFAULT_TIMEOUT=30000
RETRY_COUNT=2
HEADLESS=false

# Browser Configuration
BROWSER=chromium
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Reporting Configuration
SCREENSHOT_MODE=only-on-failure
VIDEO_MODE=retain-on-failure
ALLURE_RESULTS_DIR=allure-results
ALLURE_REPORT_DIR=allure-report

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true

# Database Configuration (if needed)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=test_db
# DB_USER=test_user
# DB_PASSWORD=test_password

# Test Data Configuration
TEST_DATA_DIR=data
ENABLE_DATA_DRIVEN_TESTS=true

# Authentication Credentials (Secure)
# IMPORTANT: Replace with your actual credentials
# Do not commit actual values to version control
TEST_USER_USERNAME=your_username_here
TEST_USER_PASSWORD=your_password_here
TEST_USER_ROLE=administrator

# Alternative user credentials (if needed)
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_admin_password
MANAGER_USERNAME=your_manager_username
MANAGER_PASSWORD=your_manager_password
REGULAR_USER_USERNAME=your_regular_user_username
REGULAR_USER_PASSWORD=your_regular_user_password

# Email Configuration for Test Data
DEFAULT_EMAIL_DOMAIN=digitalmesh.com

# Test Environment Specific
TEST_COMPANY_NAME=Test Company Ltd
TEST_DEPARTMENT_DEFAULT=IT

# Parallel Execution
MAX_WORKERS=4
FULLY_PARALLEL=true

# CI/CD Configuration
CI_ENVIRONMENT=false
PUBLISH_RESULTS=true
